{% extends 'base.html.jinja' %}

{% block content %}
  <p style="font-size: 2rem">Here you can find examples of what can be printed. Soon available as a shop.</p>
  <p style="font-size: 2rem">Many more custom and non-custom 3D models coming soon.</p>

  <section class="shop-items">
    {% for item in items %}
      {% if item.available %}
        <article>
          {% with id=item.itemRenderID, path=item.itemModel, zoom="false", height="40rem" %}
            {% include "3drender.html.jinja" %}
          {% endwith %}

          <h2>{{ item.itemName }}</h2>
          <p>{{ item.itemDescription }}</p>

          <button><a style="padding: 2.5rem 19.5rem" href="{{ item.itemLink }}">More</a></button>
        </article>
      {% endif %}
    {% endfor %}
  </section>

{% endblock %}
